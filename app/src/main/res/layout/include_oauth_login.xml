<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".useraccount.authentication.ui.login.LoginActivity"
    tools:showIn="@layout/activity_login">

    <!--///[oAuth#MobService]-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_qq_login"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/layer_list_oauth_qq" />

        <Button
            android:id="@+id/btn_wechat_login"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/layer_list_oauth_wechat" />

        <Button
            android:id="@+id/btn_sinaweibo_login"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/layer_list_oauth_sinaweibo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_facebook_login"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/layer_list_oauth_facebook" />

        <Button
            android:id="@+id/btn_twitter_login"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/layer_list_oauth_twitter" />

        <Button
            android:id="@+id/btn_linkedin_login"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/layer_list_oauth_linkedin" />

    </LinearLayout>

    <!--///[oAuth#EasyLogin#Google]-->
    <!--app:buttonSize="icon_only"-->
    <!--app:colorScheme="dark"-->
    <com.google.android.gms.common.SignInButton
        android:id="@+id/sib_google_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <!--///[oAuth#EasyLogin#Facebook]-->
    <com.facebook.login.widget.LoginButton
        android:id="@+id/lb_facebook_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <!--///[oAuth#EasyLogin#Twitter]-->
    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:id="@+id/tlb_twitter_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
